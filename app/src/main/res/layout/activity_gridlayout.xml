<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:fontFamily="Roboto"
        android:gravity="center"
        android:text="@string/titol2"
        android:textColor="@color/black_red"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3">

        <TextView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="#A8EFA3"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_columnSpan="1" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="#66ED5C"
            android:layout_marginEnd="2dp"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="#25EB16"
            android:layout_marginEnd="2dp"
            android:layout_columnSpan="1" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="#22E6E2"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:layout_columnSpan="3" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:background="#ED6767"
            android:layout_marginEnd="2dp"
            android:layout_columnSpan="2"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="#EF1010"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="2dp"
            android:layout_columnSpan="1" />

    </GridLayout>

</LinearLayout>
